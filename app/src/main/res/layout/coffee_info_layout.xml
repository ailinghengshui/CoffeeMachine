<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/home_background"
		android:orientation="vertical">

		<include layout="@layout/home_title_layout" />

		<!-- TopBar -->
		<RelativeLayout
			android:id="@+id/coffee_info_topbar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			>
			<ImageView
				android:id="@+id/coffee_info_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="43dp"
				android:contentDescription="@string/empty"
				android:padding="10dp"
				android:src="@drawable/pay_back_selector"/>

			<RelativeLayout
				android:id="@+id/coffee_shopping_cart_layout"
				android:layout_width="148dp"
				android:layout_height="80dp"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="50dp"
				android:background="@drawable/selector_pay_cart"
				android:gravity="center_vertical"
				android:visibility="visible">
				<ImageView
					android:id="@+id/coffee_shopping_cart"
					android:layout_width="32dp"
					android:layout_height="32dp"
					android:layout_marginLeft="20dp"
					android:src="@drawable/icon_shopping_cart"/>
				<TextView
					android:id="@+id/coffee_shopping_cart_indicator"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_alignLeft="@+id/coffee_shopping_cart"
					android:layout_alignTop="@+id/coffee_shopping_cart"
					android:background="@drawable/bg_badge"
					android:gravity="center"
					android:textColor="@color/white"
					android:textSize="9dp" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_toRightOf="@+id/coffee_shopping_cart"
					android:gravity="center"
					android:text="@string/str_cart"
					android:textColor="@color/white"
					android:textSize="22dp"
					/>
			</RelativeLayout>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">

			<RelativeLayout
				android:id="@+id/coffee_info_sugar_area"
				android:layout_width="570dp"
				android:layout_height="140dp"
				android:layout_marginLeft="20dp"
				android:layout_toRightOf="@+id/coffee_info_img_area"
				android:background="@drawable/coffee_infoimg_sbg">
				<TextView
					android:id="@+id/coffee_info_sugar_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="15dp"
					android:gravity="center"
					android:text="@string/coffee_info_sugar_title"
					android:textColor="@color/norcolor"
					android:textSize="22dp"/>

				<ScrollView
					android:id="@+id/coffee_info_sugar_note_scroll"
					android:layout_width="210dp"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="10dp">
					<TextView
						android:id="@+id/coffee_info_sugar_note"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="18dp"
						android:ellipsize="marquee"
						android:fadingEdge="horizontal"
						android:focusable="true"
						android:focusableInTouchMode="true"
						android:gravity="center"
						android:marqueeRepeatLimit="marquee_forever"
						android:scrollHorizontally="true"
						android:singleLine="true"
						android:textColor="@color/norcolor"
						android:textSize="16dp"/>
					/>
				</ScrollView>
				<TextView
					android:id="@+id/coffee_info_sugar_note_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="18dp"
					android:layout_toLeftOf="@+id/coffee_info_sugar_note_scroll"
					android:gravity="center"
					android:text="@string/coffee_info_notice"
					android:textColor="@color/norcolor"
					android:textSize="16dp"/>
				<TextView
					android:id="@+id/coffee_info_nosugar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/coffee_info_sugar_title"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="35dp"
					android:gravity="center"
					android:text="@string/coffee_info_nosugar_note"
					android:textColor="@color/norcolor"
					android:textSize="22dp"
					android:visibility="gone"/>
				<RadioGroup
					android:id="@+id/coffee_info_sugar_group"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginBottom="22dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:orientation="horizontal">
				</RadioGroup>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/coffee_info_num_area"
				android:layout_width="570dp"
				android:layout_height="140dp"
				android:layout_below="@+id/coffee_info_sugar_area"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:layout_toRightOf="@+id/coffee_info_img_area"
				android:background="@drawable/coffee_infoimg_sbg">
				<TextView
					android:id="@+id/coffee_info_num_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="11dp"
					android:gravity="center"
					android:text="@string/coffee_info_num_title"
					android:textColor="@color/norcolor"
					android:textSize="22dp"/>
				<RadioGroup
					android:id="@+id/coffee_info_num_group"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:orientation="horizontal">
				</RadioGroup>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/coffee_info_img_area"
				android:layout_alignLeft="@+id/coffee_info_num_area"
				android:layout_alignRight="@+id/coffee_info_num_area"
				android:layout_below="@+id/coffee_info_num_area"
				android:layout_toRightOf="@+id/coffee_info_img_area"
				android:gravity="bottom"
				android:orientation="horizontal">
				
				<LinearLayout
					android:id="@+id/coffee_info_add_to_cart"
					android:layout_width="0dp"
					android:layout_height="94dp"
					android:layout_weight="1"
					android:background="@drawable/selector_add_to_cart"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					>

					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/icon_white_cart"
						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:text="@string/str_add_cart"
						android:textColor="@color/white"
						android:textSize="20dp"
						/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/coffee_info_alipay"
					android:layout_width="0dp"
					android:layout_height="94dp"
					android:layout_marginLeft="14dp"
					android:layout_weight="1"
					android:background="@drawable/selector_ali_pay"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					>
					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/icon_alipay"
						/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:text="@string/str_ali_pay"
						android:textColor="@color/white"
						android:textSize="20dp"
						/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/coffee_info_wxpay"
					android:layout_width="0dp"
					android:layout_height="94dp"
					android:layout_marginLeft="14dp"
					android:layout_weight="1"
					android:background="@drawable/selector_wechat_pay"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					>
					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/icon_wechat"
						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:text="@string/str_wechat_pay"
						android:textColor="@color/white"
						android:textSize="20dp"
						/>

				</LinearLayout>
				<LinearLayout
					android:id="@+id/coffee_info_abcpay"
					android:layout_width="0dp"
					android:layout_height="94dp"
					android:layout_marginLeft="14dp"
					android:layout_weight="1"
					android:background="@drawable/selector_abc_pay"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					>
					<ImageView
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/icon_abc"
						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:text="@string/str_abc_pay"
						android:textColor="@color/white"
						android:textSize="20dp"
						/>

				</LinearLayout>

			</LinearLayout>

			<RelativeLayout
                android:id="@+id/coffee_info_img_area"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:background="@drawable/coffee_infoimg_bg">

                <ImageView
                    android:id="@+id/coffee_info_img"
                    android:layout_width="214dp"
                    android:layout_height="135dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:contentDescription="@string/empty"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_info_img_default">
                </ImageView>
                <TextView
                    android:id="@+id/coffee_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/llCoffeeinfoDescContainer"
					android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/norcolor"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/coffee_info_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/coffee_info_name"
                    android:layout_alignTop="@+id/coffee_info_name"
                    android:layout_below="@id/coffee_info_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/coffee_info_name"
                    android:textColor="@color/norcolor"
                    android:textSize="24dp"/>

                <LinearLayout
                    android:id="@+id/llCoffeeinfoDescContainer"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/rlCoffeeInfoPriceContainer"
					android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
					android:orientation="vertical"
                    >
                    <TextView
						android:id="@+id/tvCoffeeInfoDesc"
                        android:layout_width="wrap_content"
						android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="4dp"
						android:lines="2"
                        android:text="我很甜我很甜"
						android:textColor="@color/norcolor"
						android:textSize="14dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rlCoffeeInfoPriceContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/coffee_info_ori_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/norcolor"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/coffee_info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/coffee_info_ori_price"
                        android:textColor="@color/redcolor"
                        android:textSize="24dp" />

                </RelativeLayout>
            </RelativeLayout>


		</RelativeLayout>
	</LinearLayout>

	<ImageView
		android:id="@+id/cart_anim_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:src="@drawable/coffee_shopping_cart_icon"
		android:visibility="gone" />

</FrameLayout>