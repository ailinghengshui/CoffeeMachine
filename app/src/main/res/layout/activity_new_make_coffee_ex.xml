<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <include layout="@layout/home_title_layout" />

    <LinearLayout
        android:id="@+id/make_coffee_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <RelativeLayout
                android:id="@+id/make_coffee_adv_linear"
                android:layout_width="615dip"
                android:layout_height="380dip"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/make_coffee_adv_bg"
                >

                <SurfaceView
                    android:id="@+id/make_coffee_adv"
                    android:layout_width="match_parent"
                    android:layout_height="330dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    />
                <ImageView
                    android:id="@+id/make_coffee_adv_img"
                    android:layout_width="match_parent"
                    android:layout_height="330dip"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/empty"
                    android:scaleType="fitXY"
                    android:src="@drawable/make_coffee_adv_default"
                    android:visibility="invisible"
                    />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/make_coffee_adv_linear"
                android:layout_alignRight="@+id/make_coffee_adv_linear"
                android:layout_below="@+id/make_coffee_adv_linear"
                android:layout_marginTop="35dp"
                android:background="@drawable/make_coffee_list_bg"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="@string/str_make_coffee_thumb_up"
                    android:textColor="@color/sencondtitlecolor"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/rlMakecoffeeThumbup"
                        android:layout_width="186dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/selector_make_coffee_comment"
                        >
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/icon_thumb_up"
                            />
                        <ImageView
                            android:id="@+id/ivMakecoffeeThumbupCheck"
                            android:layout_width="26dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_make_coffee_check"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="62dp"
                            android:text="@string/str_make_coffee_satisfied"
                            android:textColor="@color/sencondtitlecolor"
                            android:textSize="24dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMakecoffeeKeepup"
                        android:layout_width="186dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/selector_make_coffee_comment"
                        >
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/icon_keep_up"
                            />
                        <ImageView
                            android:id="@+id/ivMakecoffeeKeepupCheck"
                            android:layout_width="26dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_make_coffee_check"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="62dp"
                            android:text="@string/str_make_coffee_keep_up"
                            android:textColor="@color/sencondtitlecolor"
                            android:textSize="24dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMakecoffeeThumbdown"
                        android:layout_width="186dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/selector_make_coffee_comment"
                        >
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/icon_thumb_down"
                            />
                        <ImageView
                            android:id="@+id/ivMakecoffeeThumbdownCheck"
                            android:layout_width="26dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_make_coffee_check"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="62dp"
                            android:text="@string/str_make_coffee_thumb_dowm"
                            android:textColor="@color/sencondtitlecolor"
                            android:textSize="24dp"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/make_coffee_list_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/make_coffee_adv_linear"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/make_coffee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/norcolor"
                    android:textSize="40dp"/>
                <TextView
                    android:id="@+id/make_coffee_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/make_coffee_prepare"
                    android:textColor="@color/norcolor"
                    android:textSize="30dp"/>
                <com.jingye.coffeemac.common.component.TListView
                    android:id="@+id/make_coffee_list"
                    android:layout_width="wrap_content"
                    android:layout_height="420dp"
                    android:background="@drawable/make_coffee_list_bg"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:focusable="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/make_tips_bg"
                    android:drawablePadding="10dp"
                    android:text="@string/make_coffee_noopen"
                    android:textColor="@color/redcolor"
                    android:textSize="28dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/make_coffee_fetchcup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="100dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/make_coffee_fetchtip"
                android:layout_width="660dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:lines="2"
                android:text="@string/make_coffee_finish_fetchcup"
                android:textColor="@color/norcolor"
                android:textSize="34dp"/>
            <ImageView
                android:id="@+id/make_coffee_fetchtip_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_toRightOf="@+id/make_coffee_fetchtip"
                android:background="@drawable/make_coffee_fetchtip_bg"/>
            <TextView
                android:id="@+id/make_coffee_timer"
                android:layout_width="660dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/make_coffee_fetchtip"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="111"
                android:textColor="@color/redcolor"
                android:textSize="40dp"/>
            <ImageView
                android:id="@+id/make_coffee_fetchimg"
                android:layout_width="222dp"
                android:layout_height="252dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/make_coffee_fetchtip_bg"
                android:contentDescription="@string/empty"
                android:src="@drawable/make_coffee_fetchbg_desk" />
        </RelativeLayout>
        <Button
            android:id="@+id/make_coffee_continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/make_coffee_fetchtip"
            android:layout_marginTop="100dp"
            android:background="@drawable/make_coffee_continue_selector"/>
    </LinearLayout>
</LinearLayout>