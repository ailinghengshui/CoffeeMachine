<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/make_coffee_list_item"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:paddingTop="8dp"
	android:paddingBottom="8dp">

	<ImageView
		android:id="@+id/make_coffee_list_item_cup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/empty"
		android:src="@drawable/make_coffee_cup"
		android:layout_marginLeft="8dp"
		android:layout_centerVertical="true"/>
	<TextView
		android:id="@+id/make_coffee_list_item_coffee_num"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:textColor="#666666"
		android:textStyle="bold"
		android:layout_centerVertical="true"
		android:layout_marginLeft="12dp"
		android:layout_toRightOf="@+id/make_coffee_list_item_cup"/>
	<TextView
		android:id="@+id/make_coffee_list_item_coffee_name"
		android:layout_width="85dp"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:textColor="#666666"
		android:ellipsize="end"
		android:textStyle="bold"
		android:singleLine="true"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/make_coffee_list_item_coffee_num"/>
	<TextView
		android:id="@+id/make_coffee_list_item_coffee_sugar"
		android:layout_width="80dp"
		android:layout_height="wrap_content"
		android:textSize="20dp"
		android:textColor="#666666"
		android:ellipsize="end"
		android:layout_marginLeft="12dp"
		android:textStyle="bold"
		android:singleLine="true"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/make_coffee_list_item_coffee_name"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/make_coffee_list_item_coffee_sugar">

		<TextView
			android:id="@+id/make_coffee_list_item_status"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="24dp"
			android:textColor="#666666"
			android:ellipsize="end"
			android:layout_marginLeft="12dp"
			android:textStyle="bold"
			android:visibility="gone"/>
		<ImageView
			android:id="@+id/make_coffee_list_item_loading"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@string/empty"
			android:background="@anim/anim_make_coffee_loading"
			android:visibility="gone"
			android:layout_marginLeft="20dp"/>
		<ImageView
			android:id="@+id/make_coffee_done"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@string/empty"
			android:layout_marginLeft="20dp"
			android:src="@drawable/make_coffee_done"
			android:visibility="gone"/>

	</LinearLayout>
</RelativeLayout>
