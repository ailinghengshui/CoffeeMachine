<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/transparent">
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/transparent"
	    android:layout_margin="@dimen/control_test_area_margin">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/transparent">

			<Button
				android:id="@+id/control_test_set_temp_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="设置温度"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>

			<Button
				android:id="@+id/control_test_temp_get_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="获取温度"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>
		</LinearLayout>
		
        <View
	        android:layout_width="match_parent"
	        android:layout_height="6dp"
			android:background="@color/transparent"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/transparent">

			<Button
				android:id="@+id/control_test_cup_turn_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="杯筒转动"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>

			<Button
				android:id="@+id/control_test_cup_drop_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="落杯"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="6dp"
			android:background="@color/transparent"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/transparent">

			<Button
				android:id="@+id/control_test_coffee1_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="意式浓缩测试"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>

			<Button
				android:id="@+id/control_test_coffee2_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="打饮料测试"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="6dp"
			android:background="@color/transparent"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/transparent">

			<Button
				android:id="@+id/control_test_washing_instruction"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="清洗"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"/>

			<Button
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="4dp"
				android:background="@drawable/control_test_btn_selector"
				android:text="默认"
				android:textStyle="bold"
				android:textSize="@dimen/control_test_item_font_size"
				android:textColor="#000000"
				android:visibility="invisible"/>
		</LinearLayout>

    </LinearLayout>

</LinearLayout>
