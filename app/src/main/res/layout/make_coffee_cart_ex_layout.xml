<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/home_background">

	<include layout="@layout/home_title_layout" />

	<LinearLayout
		android:id="@+id/make_coffee_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
        android:visibility="gone">

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<FrameLayout
				android:id="@+id/make_coffee_adv_linear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
				android:layout_marginLeft="56dp">
                <ImageView
                    android:id="@+id/make_coffee_adv_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/make_coffee_adv_bg"
                    android:contentDescription="@string/empty" />
				<SurfaceView
					android:id="@+id/make_coffee_adv"
					android:layout_width="605dip"
					android:layout_height="325dip"
					android:layout_gravity="bottom"
					android:layout_marginBottom="150dp"
					android:layout_marginLeft="5dp"
					android:visibility="visible" />
				<ImageView
					android:id="@+id/make_coffee_adv_img"
					android:layout_width="605dip"
					android:layout_height="325dip"
					android:src="@drawable/make_coffee_adv_default"
					android:contentDescription="@string/empty"
					android:layout_gravity="bottom"
					android:layout_marginBottom="155dp"
					android:layout_marginLeft="5dp"
					android:visibility="invisible"/>

			</FrameLayout>

			<LinearLayout
				android:id="@+id/make_coffee_list_linear"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_toRightOf="@id/make_coffee_adv_linear"
				android:layout_marginLeft="30dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/make_coffee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
					android:ellipsize="end"
					android:singleLine="true"
                    android:textColor="@color/norcolor"/>
                <TextView
                    android:id="@+id/make_coffee_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/make_coffee_prepare"
                    android:textSize="30dp"
					android:ellipsize="end"
					android:singleLine="true"
                    android:textColor="@color/norcolor"/>
				<com.jingye.coffeemac.common.component.TListView
					android:id="@+id/make_coffee_list"
					android:fadingEdge="none"
					android:layout_width="wrap_content"
					android:layout_height="420dp"
					android:divider="@null"
                    android:background="@drawable/make_coffee_list_bg"
					android:cacheColorHint="@android:color/transparent"
					android:listSelector="@android:color/transparent"
					android:scrollbars="none"
					android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/make_coffee_noopen"
                    android:textSize="28dp"
                    android:textColor="@color/redcolor"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/make_tips_bg"/>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/make_coffee_fetchcup"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:visibility="visible"
		android:orientation="vertical"
        android:gravity="center">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingTop="100dp"
			android:visibility="visible"
			android:gravity="center">
		<TextView
			android:id="@+id/make_coffee_fetchtip"
			android:layout_width="660dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/make_coffee_finish_fetchcup"
			android:textSize="40dp"
			android:textColor="@color/norcolor"
			android:lines="2"
			android:layout_marginTop="50dp"/>
		<ImageView
			android:id="@+id/make_coffee_fetchtip_bg"
			android:layout_toRightOf="@+id/make_coffee_fetchtip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="80dp"
			android:background="@drawable/make_coffee_fetchtip_bg"/>
		<TextView
			android:id="@+id/make_coffee_timer"
			android:layout_width="660dp"
			android:layout_height="wrap_content"
			android:textSize="40dp"
			android:textColor="@color/redcolor"
			android:paddingTop="20dp"
			android:text="111"
			android:gravity="center"
			android:layout_below="@+id/make_coffee_fetchtip"/>
        <ImageView
            android:id="@+id/make_coffee_fetchimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/make_coffee_fetchtip_bg"
            android:src="@drawable/make_coffee_fetchbg"
            android:contentDescription="@string/empty" />
		</RelativeLayout>
		<Button
			android:id="@+id/make_coffee_continue_btn"
			android:layout_below="@+id/make_coffee_fetchtip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="100dp"
			android:background="@drawable/make_coffee_continue_selector"/>
	</LinearLayout>
</LinearLayout>