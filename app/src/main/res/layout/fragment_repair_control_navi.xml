<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical"
    >

    <include layout="@layout/manager_control_user_item"/>

    <TextView
        android:id="@+id/repair_control_debug_txt"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/manager_control_navi_bg_selector"
        android:gravity="center"
        android:text="配料"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/repair_control_manager_txt"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/manager_control_navi_bg_selector"
        android:gravity="center"
        android:text="管理"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/repair_control_checkin_txt"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/manager_control_navi_bg_selector"
        android:gravity="center"
        android:text="签到"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/repair_control_setting_txt"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/manager_control_navi_bg_selector"
        android:gravity="center"
        android:text="设置"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        />


</LinearLayout>