<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <include
        layout="@layout/home_title_layout" />

    <LinearLayout
        android:layout_width="934dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="料盒库存设置"
            android:gravity="left|top"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color"
            android:layout_marginBottom="7dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="14dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/dosing_sample_1"
                >

                <TextView
                    android:id="@+id/tvMaterialName1"
                    android:layout_width="174dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="一号"
                    android:textColor="@color/dark_orange"
                    android:background="@drawable/bg_dosing"
                    android:textSize="16dp"
                    />

                <EditText
                    android:id="@+id/tvMaterialValue1"
                    android:layout_width="172dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:hint="@string/str_hint_value"
                    android:textColorHint="@color/grey"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_input_view"
                    />
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="单位：g"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_input_view"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/dosing_sample_1"
                android:layout_alignTop="@id/dosing_sample_1"
                android:layout_alignBottom="@id/dosing_sample_1"
                android:id="@+id/dosing_sample_2"
                android:layout_marginLeft="27dp"
                >

