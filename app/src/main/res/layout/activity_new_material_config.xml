                android:orientation="horizontal"
                android:layout_toRightOf="@id/dosing_sample_5"
                android:layout_alignTop="@id/dosing_sample_5"
                android:layout_alignBottom="@id/dosing_sample_5"
                android:id="@+id/dosing_sample_9"
                android:layout_marginLeft="27dp"
                >

