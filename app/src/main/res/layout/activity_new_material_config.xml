                    android:background="@drawable/bg_dosing"
                    android:textSize="16dp"
                    />
                <EditText
                    android:id="@+id/tvMaterialValue4"
                    android:layout_width="172dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:hint="@string/str_hint_value"
                    android:textColorHint="@color/grey"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_input_view"
                    />
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="单位：g"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_input_view"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/dosing_sample_3"
                android:layout_alignLeft="@id/dosing_sample_3"
                android:layout_alignRight="@id/dosing_sample_3"
                android:id="@+id/dosing_sample_5"
                >

                <TextView
                    android:id="@+id/tvMaterialName5"
                    android:layout_width="174dp"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="五号"
                    android:textColor="@color/dark_orange"
                    android:background="@drawable/bg_dosing"
                    android:textSize="16dp"
                    />
                <EditText
                    android:id="@+id/tvMaterialValue5"
                    android:layout_width="172dp"
