<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
	android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_margin="@dimen/control_test_area_margin">

        <Button
            android:id="@+id/coffee_machine_fix_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/control_test_btn_selector"
            android:text="修复咖啡机故障"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/coffee_machine_set_wash_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/control_test_btn_selector"
            android:text="设置自动清洗时间"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/coffee_machine_set_maintenance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/control_test_btn_selector"
            android:text="设置为维护模式"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/coffee_machine_move_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/control_other_btn_selector"
            android:text="进入后台"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/transparent"/>

        <Button
            android:id="@+id/coffee_machine_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/control_other_btn_selector"
            android:text="退出登录"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>