<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rlRepairControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/iconControlManager"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/icon_problem_repair" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iconControlManager"
            android:layout_alignRight="@+id/iconControlManager"
            android:layout_below="@+id/iconControlManager"
            android:gravity="center"
            android:text="故障修复"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRepairWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/iconControlWait"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/icon_wait" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iconControlWait"
            android:layout_alignRight="@+id/iconControlWait"
            android:layout_below="@+id/iconControlWait"
            android:gravity="center"
            android:text="设置维护模式"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>
</LinearLayout>